<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<form action="/account/update-account" method="post" class="register-form">
  <label>First name<input type="text" name="account_firstname" required value="<%= locals.account_firstname %>"></label>
  <label>Last name<input type="text" name="account_lastname" required value="<%= locals.account_lastname %>"></label>
  <label>Email<input type="email" name="account_email" required value="<%= locals.account_email %>"></label>
  <button type="submit">Update user info</button>
</form>

<form action="/account/update-password" method="post" class="register-form" id="password-form">
  <label for="accountPassword">Password</label> 
  <span>*Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span> 
  <span>*By entering a new password it will change the current password</span> 
  <input type="password" name="account_password" id="accountPassword" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
  <button type="submit">Update password</button>
</form>