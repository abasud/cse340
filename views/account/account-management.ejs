<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<div class="acc-mgmt">

    <% const accountType = accountData ? accountData.account_type : null %>

    <% if (accountType === "Employee" || accountType === "Admin") { %>
      <h2>Welcome, <%- firstName %>!</h2>
      <p><a href="/account/user-update/<%= accountData.account_id %>">Update account information</a></p>
      <h3>Inventory Management</h3>
      <p><a href="/inv/management">Access to Inventory Management</a></p>
    <% } else { %>
      <h2>Welcome, <%- firstName %>!</h2>
      <p><a href="/account/user-update/<%= accountData.account_id %>">Update account information</a></p>
    <% } %>

</div>